{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es6",
    "outDir": "./dist",
    "esModuleInterop": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./dist"],
  "watchOptions": {
    "excludeDirectories": ["node_modules", "dist"],
    "watchDirectory": "useFsEvents"
  }
}